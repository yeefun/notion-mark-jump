{
  "name": "notion-mark-manager",
  "version": "2.0.0",
  "description": "Manage your colored texts and comments effectively in Notion.",
  "keywords": [
    "chrome",
    "extension",
    "notion",
    "productivity"
  ],
  "author": "Yeefun Lin",
  "private": true,
  "scripts": {
    "predev": "rimraf dist && mkdir dist && cp -R static/* dist/",
    "dev": "parcel watch src/* src/**/* --no-source-maps --no-hmr",

    "prebuild": "rimraf dist",
    "build": "parcel build src/* src/**/* --no-content-hash",
    "postbuild": "cp -R static/* dist/",

    "lint": "eslint --ignore-path .gitignore .",
    "lints": "stylelint 'src/css/*.{css,scss}' --fix"
  },
  "devDependencies": {
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "2.0.5",
    "pretty-quick": "^3.0.0",
    "pug": "^3.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.26.10",
    "stylelint": "^13.6.1",
    "stylelint-config-sass-guidelines": "^7.0.0"
  },
  "engines": {
    "node": ">= 12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern 'src/js/**/*.js'"
    }
  }
}
